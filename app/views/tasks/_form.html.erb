<%= form_with(model: task) do |f| %>

<% if task.errors.any? %>
    <div id="error_explanation">
      <ul class="mb-0">
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="mb-3">
 <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
</div>

<div class="mb-3">
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
</div>

  <%= f.submit '投稿', class: 'btn btn-primary' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>